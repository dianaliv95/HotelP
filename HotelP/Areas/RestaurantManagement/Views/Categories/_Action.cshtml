@model Hotel.Areas.RestaurantManagement.ViewModels.CategoryActionModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">
            @if (Model.ID > 0)
            {
                <span>Edit Category</span>
            }
            else
            {
                <span>Create Category</span>
            }
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form id="createCategoryForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ID" value="@Model.ID" />

            <!-- Nazwa kategorii -->
            <div class="mb-3">
                <label for="nameInput" class="form-label">Name</label>
                <input type="text" class="form-control" id="nameInput" name="Name" placeholder="Enter Category Name" value="@Model.Name" required />
            </div>

            <!-- Opis kategorii -->
            <div class="mb-3">
                <label for="descriptionInput" class="form-label">Description</label>
                <textarea class="form-control" id="descriptionInput" name="Description" placeholder="Enter Category Description">@Model.Description</textarea>
            </div>
        </form>

        <div class="errorDiv"></div>
    </div>
    <div class="modal-footer">
        <button id="saveButton" type="button" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk mr-1"></i> Save
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fa-solid fa-xmark mr-1"></i> Close
        </button>
    </div>
</div>
