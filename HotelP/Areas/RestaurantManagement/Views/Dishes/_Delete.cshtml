@model Hotel.Areas.RestaurantManagement.ViewModels.DishActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Delete Dish</span>
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="deleteDishForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>

            <div class="alert alert-danger" role="alert">
                <p>
                    Are you sure you want to delete the dish:
                    <strong>@Model.Name</strong>?
                </p>
                <p class="mb-0 text-danger">
                    This action cannot be undone!
                </p>
            </div>
        </div>
        <div class="modal-footer">
            <button id="deleteButton" type="button" class="btn btn-danger">
                <i class="fa-solid fa-trash mr-1"></i> Delete
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fa-solid fa-xmark mr-1"></i> Close
            </button>
        </div>
    </div>
}
