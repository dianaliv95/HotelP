@model HotelP.ViewModels.ContactViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ścieżka do głównego layoutu

}

<div class="alert alert-success" role="alert">
    <h4>Dziękujemy za przesłanie wiadomości!</h4>
    <p>Poniżej przesłane przez Ciebie dane:</p>
    <ul>
        <li><strong>Imię:</strong> @Model.Name</li>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>Wiadomość:</strong> @Model.Message</li>
    </ul>
    <hr />
    <p>Niebawem skontaktujemy się z Tobą w celu udzielenia odpowiedzi.</p>
</div>
