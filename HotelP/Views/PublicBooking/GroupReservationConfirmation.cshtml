@model Hotel.ViewModels.GroupReservationConfirmationViewModel

<h2>Rezerwacja grupowa – sukces!</h2>
<p>Numer rezerwacji: <b>@Model.ReservationNumber</b></p>
<p>Od: @Model.FromDate.ToShortDateString() do: @Model.ToDate.ToShortDateString()</p>
<p>Liczba osób dorosłych: @Model.AdultCount, dzieci: @Model.ChildrenCount</p>

<p>Łączna kwota: <b>@Model.TotalPrice.ToString("C")</b></p>

<a href="@Url.Action("Index", "Home")">Powrót do strony głównej</a>
